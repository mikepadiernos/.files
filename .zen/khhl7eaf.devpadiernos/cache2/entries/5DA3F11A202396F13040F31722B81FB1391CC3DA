            jQuery(document).ready(function ($) {
        
        	  yepnope([
                {
                  //test for presence of slideshow. slideshow css included in <head> to avoid repaint
                  test: $('.ma_slideshow').length,
                  yep: ['newfiles/jquery.cycle.all.js',
                        'newfiles/slideshow.js'],
                  callback: function(url, result, key) {
                    if ( url.match('slideshow.js') ) {
                      $('body').addClass('js');
                      $('.ma_slideshow').abst( {timeout: 7000} );

        			// display the slideshow control if JS is on.
        			$('.screenreader').attr('aria-hidden','false');
        			$('.slides_control').attr('aria-hidden','false');
        
        			// aria polite on slides container
        			$('h2.slideshow').focusin(function () {	
        				$('div.ma_slideshow  div.slides ul').attr('aria-live', 'polite');
        			});
        			$('.screenreader button').click(function () {
        				// pause the slide show
        				$('.ma_slideshow div.slides > ul').cycle('pause');
						// turn off aria-live
						$('div.ma_slideshow  div.slides ul').attr('aria-live', 'off');
        				// make all slides visible
        				$('.ma_slideshow div.slides > li').removeAttr('style');
        				// hide contole below the slideshow
        				$('.ma_slideshow div.slides_control').Attr('aria-hidden','true');
        				// move role="region" from div.ma_lideshow to div.slides ul to prevent a screen reader to read entire div.ma_lideshow whenever slides change.
        				$('.ma_slideshow').removeAttr('role');
        				$('.ma_slideshow div.slides ul').Attr('role','region');
        			});
					}
                  }
                },
                {
                  //test for presence of horizontal scrolling slideshow. slideshow css included in <head> to avoid repaint
                  test: $('.ma_hshow').length,
                  yep: ['newfiles/jquery.cycle.all.js',
                        'newfiles/horizontal-slideshow.js'],
                  callback: function(url, result, key) {
                    if ( url.match('horizontal-slideshow.js') ) {
                      $('body').addClass('js');
                      $('.ma_hshow').absrock( {timeout: 0} );
                    }
                  }
                },
                
              ]);
        
            });
        </SCRIPT>
